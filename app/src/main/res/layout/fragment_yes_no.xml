<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context="czv.cozavooz.fragments.YesNoSelectionFragment">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#11ffffff"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/confirmYes"
            android:src="@drawable/confirm_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="start"
            android:background="#1b1"
            android:contentDescription="@string/confirm_yes" />

        <ImageView
            android:id="@+id/confirmNo"
            android:src="@drawable/cancel_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="end"
            android:background="#b11"
            android:contentDescription="@string/confirm_no" />

    </FrameLayout>

</RelativeLayout>